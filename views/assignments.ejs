<!-- views/assignments.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Assignments</title>
</head>
<body>
  <h2>All Assignments</h2>
  <ul>
    <% assignments.forEach(assignment => { %>
      <li>
        <strong><a href="/assignments/<%= assignment._id %>"><%= assignment.name %></a></strong>
        - Due: <%= new Date(assignment.dueDate).toDateString() %>
      </li>
    <% }) %>
  </ul>
  <a href="/assignments/new">Create a New Assignment</a>
</body>
</html>
