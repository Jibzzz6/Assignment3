<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Assignment Tracker</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <h1>Welcome to the Assignment Tracker!</h1>
    <nav>
      <a href="/">Home</a> |
      <a href="/assignments/new">Add New Assignment</a>
    </nav>
  </header>

  <main>
    <h2>All Assignments</h2>
    <% if (assignments.length > 0) { %>
      <ul>
        <% assignments.forEach(assignment => { %>
          <li>
            <strong><a href="/assignments/<%= assignment._id %>"><%= assignment.name %></a></strong>
            - Due: <%= new Date(assignment.dueDate).toDateString() %>
            <a href="/assignments/<%= assignment._id %>/edit">Edit</a> |
            <form action="/assignments/<%= assignment._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No assignments available.</p>
    <% } %>
  </main>
  

  <footer>
    <p>Â© 2024 Assignment Tracker</p>
  </footer>
</body>
</html>

